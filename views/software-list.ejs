<%- include('header') -%>
<div class="container-fluid w-50">
    <h1>Software list  <a class="text-decoration-none text-dark" href="/companymembers"><i class="bi bi-arrow-return-left float-end"></i></a></h1>
    <h5><%= companyMember.firstname ?? " "%> <%= companyMember.lastname ?? " "%></h5>
    <p><%= companyMember.username ?? " "%> - <%= companyMember.domain ?? " "%></p>
</div>

<div class="container w-50 border border-secondary rounded  justify-center p-2 pb-0">
    <table class="table align-middle table-hover">
        <thead>
          <tr>
            <th class="bg-secondary bg-gradient bg-opacity-50">Display Name</th>
            <th class="bg-secondary bg-gradient bg-opacity-50">Publisher</th>
            <th class="bg-secondary bg-gradient bg-opacity-50">Install Date
                <a class="text-decoration-none text-dark" href="/softwares/<%= companyMember._id %>/new"><i class="bi bi-plus-circle float-end mx-1"></i></a>
            </th>
          </tr>
        </thead>
        <tbody>
            <% softwares.forEach(software => { %>
                <tr>
                  <td><%= software.displayName %></td>
                  <td><%= software.publisher %></td>
                  <td>
                    <div>
                      <%= software.installDate %>
                      <a class="text-decoration-none text-dark" href="/softwares/<%= companyMember._id %>/delete/<%= software._id %>">
                        <i class="bi bi-trash float-end mx-1"></i>
                      </a>
                      <a class="text-decoration-none text-dark" href="/softwares/<%= companyMember._id %>/edit/<%= software._id %>">
                        <i class="bi bi-pencil-square float-end mx-1"></i>
                      </a>
                    </div>
                  </td>
                </tr>
              <% }); %>
        </tbody>
      </table>
</div>
<%- include('footer') -%>