<%- include('header') -%>
<div class="container-fluid w-50 d-flex justify-content-center">
    <h1>Software
        <% if (typeof software === 'undefined') 
        { %> add <% }
        else
        { %> edit <% } %>
    </h1>
</div>

<div class="container-fluid w-25 border border-secondary rounded p-4 mt-2">
    <form method="post">
        <div class="form-group mb-3">
            <label for="displayName">Display Name</label>
            <input type="text" id="displayName" class="form-control" name="displayName" value="<%= (typeof software === 'undefined') ? '' : software.displayName %>"></input>
        </div>
        <div class="form-group mb-3">
            <label for="publisher">Publisher</label>
            <input type="text" id="publisher" class="form-control" name="publisher" value="<%= (typeof software === 'undefined') ? '' : software.publisher %>"></input>
        </div>
        <div class="form-group mb-3">
            <label for="installDate">Install Date</label>
            <input type="text" id="installDate" class="form-control" name="installDate" value="<%= (typeof software === 'undefined') ? '' : software.installDate %>"></input>
        </div>
        <div class="form-group d-flex justify-content-around">
            <a class="btn btn-default border-dark" href="/softwares/<%= companyMember._id %>"><i class="bi bi-arrow-return-left float-end"></i></a>
            <button type="submit" class="btn btn-dark"><i class="bi bi-check2"></i></i></button>
        </div>
     </form>
</div>
<%- include('footer') -%>