<%- include('header') -%>
<div class="container-fluid w-50 d-flex justify-content-center">
    <h1>Company member  
        <% if (typeof companyMember === 'undefined') 
        { %> add <% }
        else
        { %> edit <% } %>
    </h1>
</div>

<div class="container-fluid w-25 border border-secondary rounded p-4 mt-2">
    <form method="post">
        <div class="form-group d-flex justify-content-between mb-3">
            <div class="container">
                <label for="firstname">First Name</label>
                <input type="text" id="firstname" name="firstname" class="form-control" value="<%= (typeof companyMember === 'undefined') ? '' : companyMember.firstname %>"></input>
            </div>
            <div class="container">
                <label for="lastname">Last Name</label>
                <input type="text" id="lastname" name="lastname" class="form-control" value="<%= (typeof companyMember === 'undefined') ? '' : companyMember.lastname %>"></input>
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="domain">Domain</label>
            <input type="text" id="domain" name="domain" class="form-control" value="<%= (typeof companyMember === 'undefined') ? '' : companyMember.domain %>"></input>
        </div>
        <div class="form-group mb-3">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" class="form-control" value="<%= (typeof companyMember === 'undefined') ? '' : companyMember.username %>"></input>
        </div>
        <div class="form-group d-flex justify-content-around">
            <a class="btn btn-default border-dark" href="members"><i class="bi bi-arrow-return-left float-end"></i></a>
            <button type="submit" class="btn btn-dark"><i class="bi bi-check2"></i></i></button>
        </div>
     </form>
</div>
<%- include('footer') -%>